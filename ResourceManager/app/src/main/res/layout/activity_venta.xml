<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mediatecnica.pjic.resourcemanager.Venta">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="VENTA"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="390dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#4381fd"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="375dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:orientation="vertical">


                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#4381fd">

                    <LinearLayout
                        android:layout_width="306dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3.1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cliente:"
                                android:textColor="#000"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/ConfirmNombre"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Dijite el nombre del cliente tal cual esté"
                                android:textSize="12dp" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#4381fd">

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3.1dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_menos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:onClick="restar"
                                    android:text="-"
                                    android:textColor="#ff0000"
                                    android:textSize="30dp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="205dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#4381fd">

                        <LinearLayout
                            android:layout_width="280dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3.1dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Cantidad:"
                                    android:textColor="#000"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TVcantidad"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"

                                    />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#4381fd">

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:background="#fff">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3.1dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_mas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:onClick="sumar"
                                    android:text="+"
                                    android:textColor="#4482fd"
                                    android:textSize="30dp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#4381fd">

                    <LinearLayout
                        android:layout_width="306dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3.1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total:"
                                android:textColor="#000"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pagoTotal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="#4381fd"
                        android:onClick="vender"
                        android:text="ENVIAR"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="#4381fd">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:background="#ffffff"
                            android:onClick="ir_clientes"
                            android:text="DESCARTAR"
                            android:textColor="#4381fd"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#4381fd">

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.1dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ircliente"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_clientes"
                        android:src="@drawable/cliente" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_ventas"
                        android:src="@drawable/ventas"
                        android:text="venta" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_catalogo"
                        android:src="@drawable/catalogo" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_añadir_p"
                        android:src="@drawable/anadir" />


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_movimiento"
                        android:src="@drawable/movimiento" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_agregar_c"
                        android:src="@drawable/anadircliente" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
