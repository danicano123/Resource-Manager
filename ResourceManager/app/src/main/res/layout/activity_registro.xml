<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="0.17"
            android:src="@drawable/logoresourcemanager" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="REGISTRO"
            android:textColor="#4381fd"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:background="#4381fd">

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1.5dp"
                android:background="#fff"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:src="@drawable/susuario" />

                <EditText
                    android:id="@+id/etUsuario"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="USUARIO" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:background="#4381fd">

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1.5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:src="@drawable/scontrasena" />

                <EditText
                    android:id="@+id/etClave"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="CONTRASEÑA"
                    android:inputType="textPassword" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:background="#4381fd">

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1.5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:src="@drawable/scontrasena" />

                <EditText
                    android:id="@+id/etclaveConfirm"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="CONFIRMAR CONTRASEÑA"
                    android:inputType="textPassword" />


            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:background="#4381fd"
            android:onClick="btnRegistrar"
            android:text="ENVIAR"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="#2279f2">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="#ffff"
                android:onClick="ir_inicio"
                android:text="CANCELAR"
                android:textColor="#4381fd"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

