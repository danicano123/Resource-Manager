        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#4381fd">

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.1dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ircliente"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_clientes"
                        android:src="@drawable/cliente" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_ventas"
                        android:src="@drawable/ventas"
                        android:text="venta" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_catalogo"
                        android:src="@drawable/catalogo" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_añadir_p"
                        android:src="@drawable/anadir" />


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:src="@drawable/movimiento" />

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:onClick="ir_agragar_c"
                        android:src="@drawable/anadircliente" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
